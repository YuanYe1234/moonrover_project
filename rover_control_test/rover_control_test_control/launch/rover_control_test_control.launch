<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find rover_control_test_control)/config/rover_control_test_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/rover_control_test" args="joint_state_controller
					  front_right_joint_position_controller
            rear_right_joint_position_controller
            rear_left_joint_position_controller
					  front_left_joint_position_controller"/>
  <!-- Load the default controllers -->
  <!--node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
  output="screen" ns="/rover_control_test" args="joint_state_controller
					  front_right_joint_velocity_controller
            rear_right_joint_velocity_controller
            rear_left_joint_velocity_controller
					  front_left_joint_velocity_controller
                                    " /-->

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/rover_control_test/joint_states" />
  </node>

</launch>
